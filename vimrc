filetype plugin indent on
" show existing tab with 2 spaces width
set tabstop=2
" when indenting with '>', use 4 spaces width
set shiftwidth=2
" On pressing tab, insert 2 spaces

set expandtab
set smartindent
set expandtab " replase tab to 2 spaces

set list " show 
set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<
set et

set wrap

set ai
set cin

set showmatch 
set hlsearch
set incsearch
set ignorecase

set lz


